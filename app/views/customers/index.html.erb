<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1> Listando Clientes</h1>

<table>
  <thead>
    <tr>
      <th> Nome</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td> <%= customer.name %> </td>
      <td> <%= link_to "Ver", customer_path(customer) %> </td>
      <td> <%= link_to "Editar", edit_customer_path(customer) %> </td>
      <td> <%= button_to 'Excluir', customer, method: :delete, form: { data: { turbo_confirm: 'Deseja Realmente Excluir?' } }%> </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Novo Cliente", new_customer_path %>